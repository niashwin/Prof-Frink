{
  "name": "frink",
  "version": "1.0.0",
  "description": "FRINK: Fully Autonomous Research Intelligence & Knowledge - Named after Professor Frink, Springfield's resident scientist",
  "author": "FRINK Contributors",
  "homepage": "https://github.com/niashwin/homer",
  "license": "MIT",
  "commands": [
    {
      "name": "frink-init",
      "description": "Initialize a new research project from a topic definition",
      "file": "commands/frink-init.md"
    },
    {
      "name": "frink-research",
      "description": "Start the autonomous research loop",
      "file": "commands/frink-research.md"
    },
    {
      "name": "frink-status",
      "description": "Display current research progress and metrics",
      "file": "commands/frink-status.md"
    },
    {
      "name": "frink-cancel",
      "description": "Stop the research loop gracefully",
      "file": "commands/frink-cancel.md"
    },
    {
      "name": "frink-resume",
      "description": "Resume research from a checkpoint",
      "file": "commands/frink-resume.md"
    }
  ],
  "skills": [
    {
      "name": "research",
      "description": "Meta-skill for autonomous scientific research",
      "file": "skills/research/SKILL.md"
    }
  ],
  "hooks": {
    "file": "hooks/hooks.json"
  },
  "dependencies": {
    "plugins": [
      "K-Dense-AI/claude-scientific-skills"
    ],
    "python": ">=3.12"
  },
  "keywords": [
    "research",
    "scientific",
    "autonomous",
    "machine-learning",
    "literature-review",
    "paper-writing"
  ]
}
